<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">

    <TextView
        android:id="@+id/pantalla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:hint="@string/ingresa_numeros"
        android:textSize="50sp"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pantalla"
        android:layout_alignParentStart="true"
        android:background="@color/purple_200"
        android:text="@string/_1"
        android:textColor="#5E35B1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pantalla"
        android:layout_toEndOf="@+id/one"
        android:background="@color/purple_200"

        android:text="@string/_2"
        android:textColor="#5E35B1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pantalla"
        android:layout_toEndOf="@+id/two"
        android:background="@color/purple_200"
        android:text="@string/_3"
        android:textColor="#5E35B1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/entre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pantalla"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/three"
        android:background="@color/purple_200"
        android:text="@string/dividir"
        android:textColor="#5E35B1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/por"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entre"
        android:layout_alignParentEnd="true"
        android:background="@color/purple_200"
        android:text="@string/x"
        android:textColor="#5E35B1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/three"
        android:layout_toStartOf="@+id/por"
        android:background="@color/purple_200"
        android:text="@string/_6"
        android:textColor="#5E35B1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/two"
        android:layout_toStartOf="@+id/six"
        android:background="@color/purple_200"
        android:text="@string/_5"
        android:textColor="#5E35B1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one"
        android:layout_toStartOf="@+id/five"
        android:background="@color/purple_200"
        android:text="@string/_4"
        android:textColor="#5E35B1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/four"
        android:layout_alignParentStart="true"
        android:background="@color/purple_200"
        android:text="@string/_7"
        android:textColor="#5E35B1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/five"
        android:layout_toEndOf="@+id/seven"
        android:background="@color/purple_200"
        android:text="@string/_8"
        android:textColor="#5E35B1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/six"
        android:layout_toEndOf="@+id/eight"
        android:background="@color/purple_200"
        android:text="@string/_9"
        android:textColor="#5E35B1"
        android:textSize="30sp"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/menos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/por"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/three"
        android:background="@color/purple_200"
        android:text="@string/resta"
        android:textColor="#5E35B1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/mas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menos"
        android:layout_alignParentEnd="true"
        android:background="@color/purple_200"
        android:text="@string/suma"
        android:textColor="#5E35B1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/igual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nine"
        android:layout_toStartOf="@+id/mas"
        android:background="@color/purple_200"
        android:text="@string/igual"
        android:textColor="#5E35B1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eight"
        android:layout_toStartOf="@+id/igual"
        android:background="@color/purple_200"
        android:text="@string/_0"
        android:textColor="#5E35B1"
        android:textSize="30sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seven"
        android:layout_toStartOf="@+id/zero"
        android:background="@color/purple_200"
        android:text="@string/punto"
        android:textColor="#5E35B1"
        android:textSize="30sp" />



</RelativeLayout>