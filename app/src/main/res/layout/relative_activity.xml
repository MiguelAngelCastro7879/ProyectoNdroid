<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ingresa_numeros"
        android:textSize="50sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:id="@+id/pantalla"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/one"
        android:text="1"
        android:layout_below="@+id/pantalla"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:background="@color/purple_200"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/two"
        android:text="2"
        android:layout_toEndOf="@+id/one"
        android:layout_below="@+id/pantalla"
        android:textSize="30dp"
        android:background="@color/purple_200"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/three"
        android:text="3"
        android:layout_toEndOf="@+id/two"
        android:layout_below="@+id/pantalla"
        android:textSize="30dp"
        android:background="@color/purple_200"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/entre"
        android:text="/"
        android:layout_toEndOf="@+id/three"
        android:layout_below="@+id/pantalla"
        android:layout_alignParentEnd="true"
        android:textSize="30dp"
        android:background="@color/purple_200"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/por"
        android:text="x"
        android:layout_below="@+id/entre"
        android:layout_alignParentEnd="true"
        android:textSize="30dp"
        android:background="@color/purple_200"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/six"
        android:text="6"
        android:layout_below="@+id/three"
        android:layout_toStartOf="@+id/por"
        android:textSize="30dp"
        android:background="@color/purple_200"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/five"
        android:text="5"
        android:layout_below="@+id/two"
        android:layout_toStartOf="@+id/six"
        android:textSize="30dp"
        android:background="@color/purple_200"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/four"
        android:text="4"
        android:layout_below="@+id/one"
        android:layout_toStartOf="@+id/five"
        android:textSize="30dp"
        android:background="@color/purple_200"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seven"
        android:text="7"
        android:layout_below="@+id/four"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:background="@color/purple_200"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eight"
        android:text="8"
        android:layout_toEndOf="@+id/seven"
        android:layout_below="@+id/five"
        android:textSize="30dp"
        android:background="@color/purple_200"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nine"
        android:text="9"
        android:layout_toEndOf="@+id/eight"
        android:layout_below="@+id/six"
        android:textSize="30dp"
        android:background="@color/purple_200"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menos"
        android:text="-"
        android:layout_toEndOf="@+id/three"
        android:layout_below="@+id/por"
        android:layout_alignParentEnd="true"
        android:textSize="30dp"
        android:background="@color/purple_200"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mas"
        android:text="+"
        android:layout_below="@+id/menos"
        android:layout_alignParentEnd="true"
        android:textSize="30dp"
        android:background="@color/purple_200"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/igual"
        android:text="="
        android:layout_below="@+id/nine"
        android:layout_toStartOf="@+id/mas"
        android:textSize="30dp"
        android:background="@color/purple_200"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zero"
        android:text="0"
        android:layout_below="@+id/eight"
        android:layout_toStartOf="@+id/igual"
        android:textSize="30dp"
        android:background="@color/purple_200"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/point"
        android:text="."
        android:layout_below="@+id/seven"
        android:layout_toStartOf="@+id/zero"
        android:textSize="30dp"
        android:background="@color/purple_200"
        />



</RelativeLayout>